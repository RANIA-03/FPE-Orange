@model IEnumerable<Task_2_3_.Models.Product>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Row -->
            <div class="row">

                <!-- column -->
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6">
                        <!-- Card -->
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                                <div>
                                    @if (item.Photo != null && !string.IsNullOrEmpty(item.contentType))
                                    {
                                        var imageBase64 = Convert.ToBase64String(item.Photo);
                                        var imageSrc = $"data:{item.contentType};base64,{imageBase64}";
                                        <img src="@imageSrc" alt="Category Image" style="max-width: 100%; max-height: 100px;" />
                                    }
                                    else
                                    {
                                        <span>No Image Available</span>
                                    }
                                </div>
                                <div>
                                    <a href="@Url.Action("Edit", new { id = item.CategoryId })" class="btn btn-primary">Edit</a>
                                    <a href="@Url.Action("Details", new { id = item.CategoryId })" class="btn btn-secondary">Details</a>
                                    <a href="@Url.Action("Delete", new { id = item.CategoryId })" class="btn btn-danger">Delete</a>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
